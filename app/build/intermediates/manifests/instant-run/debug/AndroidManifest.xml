<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.millennialapps.musicum"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERAC" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TemaPrincipalDark" >
        <activity
            android:name="com.millennialapps.musicum.activities.InitActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.millennialapps.musicum.activities.MainActivity"
            android:label="@string/title_activity_main" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.millennialapps.musicum.lists.AlbumesArtista"
            android:label="@string/title_activity_albums_artista" />
        <activity
            android:name="com.millennialapps.musicum.lists.CancionesArtista"
            android:label="@string/title_activity_songs_artista" />
        <activity
            android:name="com.millennialapps.musicum.lists.CancionesAlbum"
            android:label="@string/title_activity_canciones_album" />
        <activity
            android:name="com.millennialapps.musicum.lists.CancionesGenero"
            android:label="@string/title_activity_canciones_genero" />
        <activity
            android:name="com.millennialapps.musicum.lists.CancionesLista"
            android:label="@string/title_activity_canciones_lista" />

        <service
            android:name="com.millennialapps.musicum.services.MusicService"
            android:enabled="true" />

        <receiver android:name="com.millennialapps.musicum.services.ConexionAudifonosReceiver" >
            <intent-filter android:priority="999" >
                <action android:name="android.intent.action.HEADSET_PLUG" />
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.millennialapps.musicum.services.RemoteControlReceiver" >
            <intent-filter android:priority="2147483647" >
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.millennialapps.musicum.widget.ButtonWidget"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name=".widget.ButtonWidget.ACTION_WIDGET_RECEIVER" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget" />
        </receiver>
        <receiver
            android:name="com.millennialapps.musicum.widget.Widget4x1"
            android:label="@string/widget4x1" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name=".comun.objetos.Constantes.WIDGET_ABRIR" />
                <action android:name=".comun.objetos.Constantes.WIDGET_PLAY" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget4x1" />
        </receiver>

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.millennialapps.musicum.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>
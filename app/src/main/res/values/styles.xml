<resources>

    <style name="TemaPrincipalDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:color">@color/mi_blanco</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorHint">@color/mi_blanco</item>
        <item name="colorControlActivated">@color/mi_blanco</item>
        <item name="drawerArrowStyle">@style/DrawerArrowDark</item>
    </style>

    <style name="TemaPrincipalDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TemaPrincipalLigth" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/mi_negro</item>
        <item name="android:color">@color/mi_negro</item>
        <item name="android:textColorPrimary">@color/mi_negro</item>
        <item name="android:textColorSecondary">@color/mi_negro</item>
        <item name="android:solidColor">@color/mi_negro</item>
        <item name="android:textColorHint">@color/mi_negro</item>
        <item name="android:background">@color/blanco_transparente_claro</item>
        <item name="colorControlActivated">@color/mi_negro</item>
        <item name="drawerArrowStyle">@style/DrawerArrowLigth</item>
    </style>

    <style name="TemaPrincipalLigth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowDark" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/mi_blanco</item>
    </style>
    <style name="DrawerArrowLigth" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/mi_negro</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgVwPortada"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
        android:nestedScrollingEnabled="false"
        android:scaleType="fitXY"
        android:src="@drawable/singer" />

    <TextView
        android:id="@+id/txtArtista"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgVwPortada"
        android:layout_toRightOf="@+id/imgVwPortada"
        android:ellipsize="middle"
        android:gravity="bottom"
        android:singleLine="true"
        android:textSize="@dimen/texto_titulo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgVwPortada"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/imgVwPortada"
        android:layout_toRightOf="@+id/imgVwPortada"
        android:ellipsize="middle"
        android:gravity="top"
        android:singleLine="true"
        android:textSize="@dimen/texto_pequeno"
        android:layout_below="@+id/txtArtista" />

</RelativeLayout>
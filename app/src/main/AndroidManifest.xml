<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.erick.musicum">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERAC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TemaPrincipalDark">
        <activity
            android:name=".main.InitialPage"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:label="@string/title_activity_main">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".listas.AlbumesArtista"
            android:label="@string/title_activity_albums_artista"></activity>
        <activity
            android:name=".listas.CancionesArtista"
            android:label="@string/title_activity_songs_artista"></activity>
        <activity
            android:name=".listas.CancionesAlbum"
            android:label="@string/title_activity_canciones_album"></activity>
        <activity
            android:name=".listas.CancionesGenero"
            android:label="@string/title_activity_canciones_genero"></activity>
        <activity
            android:name=".listas.CancionesLista"
            android:label="@string/title_activity_canciones_lista"></activity>

        <service
            android:name=".servicios.MusicService"
            android:enabled="true"/>

        <receiver android:name=".servicios.ConexionAudifonosReceiver">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.HEADSET_PLUG" />
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
        </receiver>
        <receiver android:name=".servicios.RemoteControlReceiver">
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".widget.ButtonWidget"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name=".widget.ButtonWidget.ACTION_WIDGET_RECEIVER" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget" />
        </receiver>
        <receiver
            android:name=".widget.Widget4x1"
            android:label="@string/widget4x1">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name=".comun.objetos.Constantes.WIDGET_ABRIR" />
                <action android:name=".comun.objetos.Constantes.WIDGET_PLAY" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget4x1" />
        </receiver>
    </application>

</manifest>
